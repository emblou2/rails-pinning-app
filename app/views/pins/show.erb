<div class="header">
  <h1>
    <i class="fa fa-laptop"></i> 
    <%= "#{@pin.title}" %>
  </h1>
</div>

<div class="show-pin">
   <div class="pic">
    <img src="<%= @pin.image.url(:medium) %>">
  </div>
  <p><%= "#{@pin.text}" %></p>

  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
    <%= link_to "#{@pin.url}", "#{@pin.url}", html_options = { target: "_blank" } %>
    
  </p>
</div>
<br/>
<%= link_to '<i class="fa fa-home"></i> Back to Home'.html_safe, "/" %>