<h1>New Pin</h1>

<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <% if !@errors.nil? %>
      <div class="alert alert-danger" role="alert">
        <label><%= pluralize(@errors.count, "error") %> prevented this pin from being saved!</label>
        <ul>
          <% @errors.full_messages.each do |msg| %>
            <li>
              <%= msg %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>

<%= form_for @pin, html: { class: 'form form-horizontal' } do |f| %>
  <div class="col-md-offset-3 col-md-6">
    <div class="form-group">
      <label for="pin_title" class="col-sm-2 control-label" >Title</label>
      <div class="col-sm-10">
        <%= f.text_field :title, class: 'form-control'  %>
      </div>
    </div>

    <div class="form-group">
      <label for="pin_category_id" class="col-sm-2 control-label" >Category</label>
      <div class="col-sm-10">
        <%= f.collection_select :category_id, Category.all, :id, :name, {},  { class: 'form-control' }  %>
      </div>
    </div>

    <div class="form-group">
      <label for="pin_url" class="col-sm-2 control-label" >URL</label>
      <div class="col-sm-10">
        <%= f.text_field :url, class: 'form-control'%>
      </div>
    </div>

    <div class="form-group">
      <label for="pin_text" class="col-sm-2 control-label" >Text</label>
      <div class="col-sm-10">
        <%= f.text_area :text, rows: 9, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <label for="pin_slug" class="col-sm-2 control-label" >Slug</label>
      <div class="col-sm-10">
        <%= f.text_field :slug, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group text-right col-sm-12">
      <%= f.submit %>
    </div>
  </div>

<% end %>